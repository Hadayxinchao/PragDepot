<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
    <%= button_to '-', decrement_line_item_path(line_item), method: :post, data: { turbo_action: 'replace' }, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
  </td>
  <td>
    <%= button_to 'Delete Item', line_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
  </td>
</tr>